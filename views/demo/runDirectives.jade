extends ../layout
block content
    div(ng-app='runDirectivesDemo')
        .container(ng-controller='runDirectivesDemoController')
            h1 Up and running with Angular Direcitives
            span {{hello}}

            uprunning

            ul(ng-repeat="tweet in tweets" small-star)
                li
                    span(ng-click="sayHello()") {{tweet.author}}
                    span(ng-click="dance()") dance inner loop

            div(small-star)
                span(ng-click="dance()") dance test in inner span

            div(small-star ng-click="dance()") dance test in same level div

            h2 kendoUI-angularJS
            input(kendo-auto-complete ng-model="country" k-data-source="countryNames")
            p Your selection: {{ country }}

            h2 self-defined kendoUI auto complete
            input(auto-complete-input ng-model="color" odin-data-source="colors")
            p self defined - selection: {{ color }}


            h2 what's transclude?
            hello-transclude
                div This is a demo to explain what's transclude.
                    span this is an inner span

            h2 expander
            expender(odin-title="expanderTitle")
                div This is the content for expender